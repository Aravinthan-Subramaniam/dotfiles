#!/usr/bin/env bash

# set up a backup place
backup_folder=$HOME/dotfiles_backup

# store the paths of where these files should be
zshrc_location=$HOME/.zshrc
tmuxconf_location=$HOME/.tmux.conf
vimrc_location=$HOME/.vimrc

# what platform are we running on
platform=`uname`

case "$platform" in
  Darwin*)
    echo "Detected OS to be macOS"
    exit 0
    ;;
  *)
    echo "The OS is not supported by this repo. Exiting."
    exit 2
    ;;
esac


backup_and_replace_zshrc () {
  if [[ -f $zshrc_location ]]; then
    echo "Found a .zshrc in $USER's home directory"
    echo "Backing it up at $backup_folder/.zshrc"

    mkdir -p $backup_folder
    mv $HOME/.zshrc $backup_folder/.zshrc
  fi

  rm $HOME/.zshrc
  mv $1/.zshrc $HOME/.zshrc
}
